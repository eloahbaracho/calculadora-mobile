<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_margin="0.2in"
        android:background="#CE69DF"
        android:backgroundTint="#DB64EF"
        android:fontFamily="sans-serif-light"
        android:padding="0.1in"
        android:text="Calculadora"
        android:textAlignment="center"
        android:textSize="48sp" />

    <EditText
        android:id="@+id/camponumero"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:backgroundTint="#E91E63"
        android:backgroundTintMode="multiply"
        android:ems="10"
        android:inputType="number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/numero7"
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:text="7"
            android:textSize="24sp" />

        <Button
            android:id="@+id/numero8"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="8"
            android:textSize="24sp" />

        <Button
            android:id="@+id/numero9"
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="9"
            android:textSize="24sp" />

        <Button
            android:id="@+id/mais"
            android:layout_width="74dp"
            android:layout_height="76dp"
            android:layout_weight="1"
            android:text="+"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/numero4"
            android:layout_width="wrap_content"
            android:layout_height="108dp"
            android:layout_weight="0"
            android:text="4"
            android:textSize="24sp" />

        <Button
            android:id="@+id/numero5"
            android:layout_width="127dp"
            android:layout_height="108dp"
            android:layout_weight="0"
            android:text="5"
            android:textSize="24sp" />

        <Button
            android:id="@+id/numero6"
            android:layout_width="112dp"
            android:layout_height="108dp"
            android:layout_weight="0"
            android:text="6"
            android:textSize="24sp" />

        <Button
            android:id="@+id/menos"
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:layout_weight="0"
            android:text="-"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/numero1"
            android:layout_width="103dp"
            android:layout_height="115dp"
            android:layout_weight="0"
            android:text="1"
            android:textSize="24sp" />

        <Button
            android:id="@+id/numero2"
            android:layout_width="132dp"
            android:layout_height="118dp"
            android:layout_weight="0"
            android:text="2"
            android:textSize="24sp" />

        <Button
            android:id="@+id/numero3"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_weight="0"
            android:text="3"
            android:textSize="24sp" />

        <Button
            android:id="@+id/multiplicar"
            android:layout_width="wrap_content"
            android:layout_height="117dp"
            android:layout_weight="0"
            android:text="x"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/numero0"
            android:layout_width="316dp"
            android:layout_height="91dp"
            android:layout_weight="0"
            android:text="0"
            android:textSize="24sp" />

        <Button
            android:id="@+id/dividir"
            android:layout_width="wrap_content"
            android:layout_height="89dp"
            android:layout_weight="0"
            android:text="/"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/igual"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="="
            android:textSize="34sp" />
    </LinearLayout>

</LinearLayout>